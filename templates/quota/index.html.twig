{% extends 'base.html.twig' %}

{% block title %}
	{{'title.quotaList' | trans }}
{% endblock %}

{% block body %}
	<main class="container-fluid">

		{% include 'quota/_searchForm.html.twig' %}

		<div class="container-fluid" {{ stimulus_controller('table', { 
				  'exportName': 'quotas',
				  'filters': filters is defined ? filters : null,
	 		}) }}>
			{{ include('quota/_list.html.twig')}}
			<span class="pull-right">
				<a href="{{ path ('quota_new') }}" class="btn btn-primary rounded-circle fixed-bottom-right">
					<i class="fa fa-plus" title='{{ "btn.new" | trans | capitalize }}'></i>
				</a>
			</span>
		</div>
		{{ include('common/_alert.html.twig') }}
	</main>
{% endblock %}